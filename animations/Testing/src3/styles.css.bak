* {
  box-sizing: border-box;
}
body {
  width: 100vw;
  height: 100vh;
  margin: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.circle {
  background: black;
  width: 50px;
  height: 50px;
  border-radius: 10%;
  position: absolute;
  box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.9);
	animation: spiral 4s 1 forwards linear;

}


@keyframes spiral {
		from {transform: rotate(0deg) translateX(0px) rotate(0deg);}
		to {transform: rotate(360deg) translateX(150px) rotate(-360deg);}

}


